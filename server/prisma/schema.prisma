generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  phone     String?
  city      String?
  name      String
  role      String   @default("USER") // USER, SITTER, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pets      Pet[]
  bookings  Booking[]
  profile   SitterProfile?
}

model SitterProfile {
  id              Int      @id @default(autoincrement())
  userId          Int      @unique
  user            User     @relation(fields: [userId], references: [id])
  bio             String
  price           Float
  location        String
  neighborhood    String?
  experience      String
  services        String   // JSON array as string
  petTypes        String   // JSON array as string
  propertyType    String
  hasOutdoorSpace Boolean  @default(false)
  allowsPets      Boolean  @default(false)
  maxPets         String
  skills          String?
  certifications  String?
  rating          Float    @default(0)
  reviews         Review[]
  availability    SitterAvailability[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model SitterAvailability {
  id        Int      @id @default(autoincrement())
  sitterId  Int
  sitter    SitterProfile @relation(fields: [sitterId], references: [id], onDelete: Cascade)
  date      DateTime
  isAvailable Boolean @default(true)
  slots     String   // JSON array: ["morning", "afternoon", "evening", "overnight"]
  createdAt DateTime @default(now())
  
  @@unique([sitterId, date])
}

model Pet {
  id           Int      @id @default(autoincrement())
  petName      String
  petBreed     String
  petAge       String
  petWeight    String?
  specialNeeds String?
  ownerId      Int
  owner        User     @relation(fields: [ownerId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Booking {
  id          Int      @id @default(autoincrement())
  startDate   DateTime
  endDate     DateTime
  status      String   @default("PENDING") // PENDING, CONFIRMED, COMPLETED, CANCELLED
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  sitterId    Int      // Reference to User ID of sitter
  petId       Int?
  serviceName String?
  price       Float?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String
  sitterId  Int
  sitter    SitterProfile @relation(fields: [sitterId], references: [id])
}
