generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  phone     String?
  city      String?
  name      String
  role      String   @default("USER") // USER, SITTER, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pets      Pet[]
  bookings  Booking[]
  profile   SitterProfile?
}

model SitterProfile {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  user        User     @relation(fields: [userId], references: [id])
  bio         String
  price       Float
  location    String
  rating      Float    @default(0)
  reviews     Review[]
}

model Pet {
  id           Int      @id @default(autoincrement())
  petName      String
  petBreed     String
  petAge       String
  petWeight    String?
  specialNeeds String?
  ownerId      Int
  owner        User     @relation(fields: [ownerId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Booking {
  id        Int      @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  status    String   @default("PENDING") // PENDING, CONFIRMED, COMPLETED, CANCELLED
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  sitterId  Int // Reference to SitterProfile ID ideally, or User ID of sitter
  createdAt DateTime @default(now())
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String
  sitterId  Int
  sitter    SitterProfile @relation(fields: [sitterId], references: [id])
}
